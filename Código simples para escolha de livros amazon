print(5 * "=", "BEM VINDO A LIVRARIA AMAZON", 5 * "=")
print("Temos disponíveis:")
escolha = input("1. a arte da guerra // 2. a revolução dos bichos // 3. o livro negro do comunismo. Escolha qual você quer e coloque o número respectivo:")

if escolha == '1':
    print("Escolheu o livro a arte da guerra.")
    print("O valor dele é de R$60,00")
    confirmacao1 = input("Digite 's' para sim e 'n' para não:")

    while confirmacao1.lower() != 's' and confirmacao1.lower() != 'n':
        print("Opção inválida. Digite 's' para sim ou 'n' para não.")
        confirmacao1 = input("Digite 's' para sim e 'n' para não:")

    if confirmacao1.lower() == 's':
        print("Compra confirmada no valor de R$60,00.")
        print("Este é o código do seu pedido: 482")
    else:
        print("Compra não confirmada. Retornando à seleção de livros.")

elif escolha == '2':
    print("Escolheu o livro a revolução dos bichos.")
    print("O valor dele é de R$23,50")
    confirmacao1 = input("Digite 's' para sim e 'n' para não:")

    while confirmacao1.lower() != 's' and confirmacao1.lower() != 'n':
        print("Opção inválida. Digite 's' para sim ou 'n' para não.")
        confirmacao1 = input("Digite 's' para sim e 'n' para não:")

    if confirmacao1.lower() == 's':
        print("Compra confirmada no valor de R$23,50.")
        print("Este é o código do seu pedido: 785")
    else:
        print("Compra não confirmada. Retornando à seleção de livros.")

elif escolha == '3':
    print("Escolheu o livro 'o livro negro do comunismo'.")
    print("O valor dele é de R$60,00")
    confirmacao1 = input("Digite 's' para sim e 'n' para não:")

    while confirmacao1.lower() != 's' and confirmacao1.lower() != 'n':
        print("Opção inválida. Digite 's' para sim ou 'n' para não.")
        confirmacao1 = input("Digite 's' para sim e 'n' para não:")

    if confirmacao1.lower() == 's':
        print("Compra confirmada no valor de R$60,00.")
        print("Este é o código do seu pedido: 666")
    else:
        print("Compra não confirmada. Retornando à seleção de livros.")

else:
    print("Opção inválida. Por favor, escolha um número válido.")
